- form_for feed, :html => {:class => :"feed_menu" } do |f|
  %h3 Provide tags for this feed
  %p
    = f.text_field :tag_list, :value => f.object.tags_from(current_user).join(", ")
  %p &nbsp;
  %h3 Tweak look of this feed on entries page
  %p
    = f.check_box :headers_only
    = f.label :headers_only, "Display only headers"
  %p
    = f.check_box :pictures_only
    = f.label :pictures_only, "Display only pictures"
  %p
    = f.check_box :plain_text_only
    = f.label :plain_text_only, "Remove any media and formatting"
  %p &nbsp;
  %p
    = f.label :limit_entries_to, "Limit content to specified number of characters:"
    = f.text_field :limit_entries_to
  %p
    = f.label "Results may vary for formatted content. 0 means no limit"
  %p &nbsp;
  %p
    = f.submit "Save"
